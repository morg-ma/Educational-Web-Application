@model LoginViewModel
@{
    ViewData["Title"] = "Login Page";
}

<h1 class="text-center text-primary">Login</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group mt-5 mb-2">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form form-control" autocomplete="off"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form form-control" />
                <span asp-validation-for="Password" class="text-danger "></span>
            </div>
            <div>
                <input asp-for="RememberMe" type="checkbox" />
                <label asp-for="RememberMe">Remember me</label>
            </div>
            <span asp-validation-for="Error" class="text-danger"></span>
            <div class="form-group mt-3">
                <input type="submit" class="btn btn-primary w-100" />
            </div>
        </form>
        <div class="d-flex justify-content-between align-items-center mt-3">
            <a class="btn btn-outline-secondary" asp-action="ShowWebsite" asp-controller="Home">Back to Website</a>
            <a class="btn btn-success" asp-action="Register">Register an Account</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}