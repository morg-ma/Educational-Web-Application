@model Department

@{
    ViewData["Title"] = "Show Instructors in Department";
}

<div>
    <h1>Department</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ManagerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ManagerName)
        </dd>
    </dl>
</div>
<div class="mt-5 mb-3">
    <h4>Instructors in this Department</h4>
    <hr />
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Salary</th>
                <th>Address</th>
                <th>Course</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ins in Model.Instructors)
            {
                <tr>
                    <td>@ins.Name</td>
                    <td>@ins.Salary</td>
                    <td>@ins.Address</td>
                    <td>@ins.Course.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>