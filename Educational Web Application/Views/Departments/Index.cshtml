@model IEnumerable<Department>

@{
    ViewData["Title"] = "Departments";
}

@if (TempData["message"] != null)
{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["message"]');
    </script>
}



<h1>Departments List</h1>

<p class="mb-3">
    <a class="btn btn-outline-success" asp-action="Create">Create New</a>
</p>
<div class="mb-3">
    <form asp-action="Index" class="flex justify-content-center">
        <div class="nav justify-content-center">
            <input class="form-control d-inline w-50 me-1" type="search" name="search" value="@ViewBag.search" />
            <input class="btn btn-outline-primary" type="submit" value="Search" />
        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManagerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManagerName)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> | 
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a> | 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@* Paging *@
<div class="col-md-12">
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="#">
                    <span>First</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">
                    <span>Previous</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">
                    <span>1</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">
                    <span>2</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">
                    <span>3</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">
                    <span>Next</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">
                    <span>Last</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
