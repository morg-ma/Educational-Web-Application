@model Department

@{
    ViewData["Title"] = "Show Courses in Department";
}

<div>
    <h1>Department</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ManagerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ManagerName)
        </dd>
    </dl>
</div>
<div class="mt-5 mb-3">
    <h4>Courses in this Department</h4>
    <hr />
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Degree</th>
                <th>Minimum Degree</th>
                <th>Credits</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cr in Model.Courses)
            {
                <tr>
                    <td>@cr.Name</td>
                    <td>@cr.Degree</td>
                    <td>@cr.MinDegree</td>
                    <td>@cr.Credits</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>