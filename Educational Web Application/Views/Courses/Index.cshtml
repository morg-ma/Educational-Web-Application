@model DataListViewModel<Course>

@{
    ViewData["Title"] = "Courses";
}

<partial name="_MessagePartial" />

<h1>Courses List</h1>

<p class="mb-3">
    <a class="btn btn-outline-success" asp-action="Create">Create New</a>
</p>

<partial name="_SearchBar" />



@* Paging *@
<div id="courses-list">
    <partial name="_CoursesTablePartial" />
</div>

<partial name="_DeleteModal" />

@section Scripts {
    <script type="text/javascript">
        $(document).on("click", ".pagination a", function (e) {
            e.preventDefault();

            // Get the URL from the clicked pagination link
            var url = $(this).attr("href");

            // Use AJAX to load the data into the #courses-list div
            $.get(url, function (data) {
                $('#courses-list').html(data);
            });
        });
    </script>
}